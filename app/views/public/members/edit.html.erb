<div class="my-page-edit">
  <h1 class="my-page-title"><%= @member.member_name %>さんの登録情報変更</h1>
  <%= form_with model: @member, url: member_path, method: :patch do |f| %>
    <table class="my-page-table">
      <tbody>
        <tr>
          <th class="my-page-th">ニックネーム</th>
          <td class="my-page-td"><%= f.text_field :member_name %></td>
        </tr>
        <tr>
          <th class="my-page-th">メールアドレス</th>
          <td class="my-page-td"><%= f.email_field :email %></td>
        </tr>
        <tr>
          <th class="my-page-th">年齢</th>
          <td class="my-page-td"><%= f.text_field :age %></td>
        </tr>
        <tr>
          <th class="my-page-th">性別</th>
          <td class="my-page-td"><%= @member.gender %></td>
        </tr>
        <tr>
          <th class="my-page-th">自己紹介文</th>
          <td class="my-page-td"><%= f.text_field :introduction %></td>
        </tr>
      </tbody>
    </table>
    <%= f.submit "編集内容を保存" %>
  <% end %>
  <div class="my-page-bottom">
    <%= link_to "戻る", members_my_page_path %>
  </div>
</div>
