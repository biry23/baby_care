<div class="member">
  <div class="member-title">
    <h1>ユーザー情報</h1>
  </div>
  <table class="my-page-table">
    <tbody>
      <tr>
        <th class="my-page-th">ニックネーム</th>
        <td class="my-page-td"><%= @member.member_name %></td>
      </tr>
      <tr>
        <th class="my-page-th">メールアドレス</th>
        <td class="my-page-td"><%= @member.email %></td>
      </tr>
      <tr>
        <th class="my-page-th">年齢</th>
        <td class="my-page-td"><%= @member.age %></td>
      </tr>
      <tr>
        <th class="my-page-th">性別</th>
        <td class="my-page-td">
          <%= @member.gender == 0 ? '男性' : '女性' %>
        </td>
      </tr>
      <tr>
        <th class="my-page-th">投稿数</th>
        <td class="my-page-td"><%= @member.posts.count %></td>
      </tr>
      <tr>
        <th class="my-page-th">コメント投稿数</th>
        <td class="my-page-td"><%= @member.comments.count %></td>
      </tr>
    </tbody>
  </table>
  <div class="my-page-button">
    <%= link_to "戻る", posts_path %>
  </div>
</div>