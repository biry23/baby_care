<div class="post">
  <div class="post-all">
    <h1 class="post-all-title">全ての投稿一覧</h1>
    <div class="post-search">
      <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
        <%= f.text_field :keyword %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
  <table class="post-table">
    <thead>
      <tr>
        <th class="post-th">タイトル</th>
        <th class="post-th">投稿者</th>
        <th class="post-th">投稿日</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td class="post-td"><%= link_to post.title, post_path(post.id) %></td>
        <td class="post-td"><%= post.member.member_name %></td>
        <td class="post-td"><%= post.created_at.strftime("%Y年%m月%d日") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>