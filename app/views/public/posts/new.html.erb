<div class="post">
  <div class="post-new">
    <div class="post-title">
      <h1>新規投稿</h1>
    </div>
  <div class="post-error">
    <% if @post.errors.any? %>
      <%= @post.errors.count %> 件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <%= form_with model: @post, url: posts_path, method: :post do |f| %>
    <table>
      <tbody>
        <tr>
          <th>title</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>本文</th>
          <td><%= f.text_area :text %></td>
        </tr>
        <tr>
          <th>投稿ジャンル</th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "-- 選択してください --" %></td>
        </tr>
      </tbody>
    </table>
    <%= f.submit "投稿確定！" %>
  <% end %>
  </div>
</div>