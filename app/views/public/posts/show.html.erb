<h1>投稿詳細</h1>
<%= link_to @post.member.member_name, member_path(@post.member.id) %>
<%= @post.title %>
<%= @post.text %>
<%= @post.created_at.strftime("%Y年%m月%d日") %>
<% if member_signed_in? && current_member.id == @post.member.id %>
    <%= link_to "編集", edit_post_path(@post.id) %>
<% end %>


<%= form_for [@post, @comment] do |f| %>
    <%= f.text_area :comment_text %>
    <%= f.submit "コメント投稿" %>
<% end %>
<div class='star-btn' id="favorite_button_<%= @post.id %>">
    <%= render "public/favorites/favorite", post: @post %>
</div>

<table>
    <thead>
        <tr>
            <th>コメント投稿者</th>
            <th>コメント内容</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.member.member_name %></td>
                <td><%= comment.comment_text %></td>
                <% if member_signed_in? && current_member.id == comment.member.id %>
                    <td><%= link_to "削除", post_comment_path(@post, comment), method: :delete %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>



