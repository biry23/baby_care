<!DOCTYPE html>
<html>
  <head>
    <title>BabyCare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Baby Care</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if member_signed_in? %>
              <li class="nav-item active">
                <%= link_to "Topへ", root_path %>
              </li>

              <li class="nav-item">
                <%= link_to members_my_page_path do %>
                  マイページ
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to about_path do %>
                  About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to posts_path do %>
                  全ての投稿一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_member_session_path, method: :delete do %>
                  ログアウト
                <% end %>
              </li>

              <% elsif admin_signed_in? %>

              <li class="nav-item">
                <%= link_to "Topへ", admin_root_path %>
              </li>

              <li class="nav-item">
                <%= link_to admin_members_path do %>
                  ユーザー一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_posts_path do %>
                  投稿一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_genres_path do %>
                  ジャンル一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  ログアウト
                <% end %>
              </li>

              <% else %>

              <li class="nav-item">
                <%= link_to "Topへ", root_path %>
              </li>

              <li class="nav-item">
                <%= link_to new_member_registration_path do %>
                  新規登録
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_member_session_path do %>
                  ログイン
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to about_path do %>
                  About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to posts_path do %>
                  投稿一覧
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
